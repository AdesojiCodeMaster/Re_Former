<%= form_for @user, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username, placeholder: 'Enter your username!' %><br><br>

  <%= f.label :email %>
  <%= f.email_field :email, placeholder: 'Enter your email;jobs@hot.com' %><br><br>

  <%= f.label :password %>
  <%= f.password_field :password, placeholder: 'Enter your password!' %><br><br>
  <%= f.submit "Create" %>
<% end %>
