<div class = 'form_body'>
<h1><b>Create New User</b> </h1>
<%= form_for @user, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
    <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |error| %>
    <p class = 'error' >*<%= error %></p>
    <% end %>
  <% end %>
  <div  class = 'form_item'>
  <%= f.label :username %>
  <%= f.text_field :username, :class => 'wide', placeholder: 'Enter your username!' %>
  </div>
  <br>
  <div  class = 'form_item'>
  <%= f.label :email %>
  <%= f.email_field :email, :class => 'wide', placeholder: 'Enter your email;jobs@hot.com' %>
  </div>
  <br>
  <div  class = 'form_item'>
  <%= f.label :password %>
  <%= f.password_field :password,:class => 'wide', placeholder: 'Enter your password!' %>
  </div>
  <br>
  <%= f.submit "Create", :class => 'sub' %>
<% end %> 
</div>